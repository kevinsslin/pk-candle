{
  "name": "pk-candle",
  "private": true,
  "packageManager": "pnpm@9.12.1",
  "scripts": {
    "dev": "turbo run dev --parallel",
    "dev:web": "turbo run dev --filter=@pk-candle/web",
    "dev:server": "turbo run dev --filter=@pk-candle/server",
    "build": "turbo run build",
    "lint": "turbo run lint",
    "typecheck": "turbo run typecheck",
    "db:push": "turbo run db:push --filter=@pk-candle/server",
    "db:studio": "turbo run db:studio --filter=@pk-candle/server",
    "test:web": "pnpm -C apps/web test",
    "test:e2e": "playwright test",
    "test": "pnpm test:web && pnpm test:e2e"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@playwright/test": "^1.58.0",
    "@typescript-eslint/eslint-plugin": "^8.53.1",
    "@typescript-eslint/parser": "^8.53.1",
    "eslint": "^9.39.2",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-refresh": "^0.4.26",
    "turbo": "^2.4.6",
    "typescript": "^5.9.3"
  }
}
